<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!-- Background logo with opacity -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/cbi" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.95"
            android:background="@android:color/white" />
    </FrameLayout>

    <!-- Content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Regular ImageView for QR code -->
            <ImageView
                android:id="@+id/qrCodeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <!-- User information section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserName"
                android:textColor="@color/black"
                android:textSize="@dimen/l"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="8dp" />

            <include
                android:id="@+id/infoBlokList"
                layout="@layout/layout_wb_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/infoTotalJjg"
                layout="@layout/layout_wb_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <include
                android:id="@+id/infoTotalTransaksi"
                layout="@layout/layout_wb_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
            <include
                android:id="@+id/infoNoESPB"
                layout="@layout/layout_wb_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
            <include
                android:id="@+id/infoDriver"
                layout="@layout/layout_wb_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
            <include
                android:id="@+id/infoNopol"
                layout="@layout/layout_wb_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
            <include
                android:id="@+id/infoPemuat"
                layout="@layout/layout_wb_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <View
            android:id="@+id/dashedLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dashed_straight_line"
            android:layerType="software"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="@dimen/s"
            android:fontFamily="@font/manrope_semibold"
            android:gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</FrameLayout>