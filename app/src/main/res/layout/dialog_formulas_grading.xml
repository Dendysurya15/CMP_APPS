<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/l"
        android:id="@+id/titleDialogRumus"
        android:textStyle="bold"
        android:text="Rumus Perhitungan Data Grading"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/manrope_extrabold"
        android:paddingBottom="10dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/titleDialogRumus"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:visibility="visible"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_semibold"
            android:text="• Dikirim ke Pabrik = Jumlah Jjg - Jjg Kosong"
            android:textSize="@dimen/m"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"


            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutKirimPabrik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:visibility="visible"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvDikirimPabrik"
                android:layout_width="0dp"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/manrope_semibold"
                android:text="• TBS yang dibayar = Jumlah Jjg - (Buah Mentah + Jjg Kosong)"
                android:textSize="@dimen/m"
                app:layout_constraintStart_toStartOf="parent"

                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>