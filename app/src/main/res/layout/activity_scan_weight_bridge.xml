<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.view.weightBridge.ScanWeightBridgeActivity">

    <include
        android:id="@+id/navbar"
        layout="@layout/header_feature_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noEspbTitleScanWB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/navbar"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:text=""
        android:textColor="@color/black"
        android:fontFamily="@font/manrope_extrabold"
        android:textSize="18sp"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/infoCreatedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/noEspbTitleScanWB"
        android:layout_marginHorizontal="20dp"

        android:textColor="@color/black"
        android:fontFamily="@font/manrope_bold"
        android:textSize="15sp"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/dashedLine"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dashed_straight_line"
        android:layerType="software"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/infoCreatedAt" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/dashedLine"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/infoEstate"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/infoAfdeling"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/infoBlok"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/infoTotalJjg"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/infoNoPol"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/infoNoDriver"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/infoTransporter"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/infoMill"
            layout="@layout/layout_detail_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>