<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:padding="16dp">

    <!-- Title section -->
    <TextView
        android:id="@+id/titleDialogBluetoothReceive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="Data Transfer Hektaran Bluetooth"
        android:textColor="@color/black"
        android:textSize="@dimen/l"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/progressBarReceive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Progress bar on the right -->
    <ProgressBar
        android:id="@+id/progressBarReceive"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleDialogBluetoothReceive"
        app:layout_constraintBottom_toBottomOf="@+id/titleDialogBluetoothReceive" />

    <View
        android:id="@+id/dashedLine"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/dashed_straight_line"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleDialogBluetoothReceive" />

    <!-- Scrollable content area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashedLine">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Error card (initially hidden) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/errorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/bgPinkRed"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/bgpinkBrown"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/errorIcon"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/circle_exclamation_solid"
                        android:tint="@color/colorRedDark"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/errorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@color/grayDefault"
                        android:textSize="17dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bluetooth Status Section -->
            <TextView
                android:id="@+id/tvBluetoothStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:text="Status Bluetooth: Menunggu koneksi..."
                android:textSize="@dimen/s"
                android:fontFamily="@font/manrope_medium"
                android:textStyle="italic"
                android:textColor="@color/bluedark" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvReceiveStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Menunggu data dari perangkat pengirim..."
                android:textSize="@dimen/m"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/greenDarker" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnCloseReceive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/greenDarker"
            android:fontFamily="@font/manrope_bold"
            android:text="Tutup"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/m" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>