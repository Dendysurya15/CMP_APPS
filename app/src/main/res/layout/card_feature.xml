<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/card_panen_tbs_border"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/greenDefault">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="7dp"
        android:id="@+id/card_panen_tbs"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="6dp">
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/feature_name"
                android:textAllCaps="true"
                android:text="Panen TBS"
                android:textColor="@android:color/background_dark"
                android:textSize="17dp"
                android:fontFamily="@font/manrope_bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/icon_feature"
                android:src="@drawable/cbi"
                android:visibility="gone"/>
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="000"
                android:id="@+id/count_feature_data"
                android:textSize="50sp"
                android:visibility="visible"
                android:fontFamily="@font/manrope_semibold" />

            <LinearLayout
                android:id="@+id/countLoadingDotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:layout_gravity="left"
                android:visibility="gone">

                <TextView
                    android:id="@+id/countDot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/countDot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/countDot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/countDot4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/feature_function_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:text="Pencatatan panen TBS di TPH oleh kerani panen"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>
