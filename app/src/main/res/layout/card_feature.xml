<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="200dp"


    app:cardCornerRadius="10dp"
    android:id="@+id/card_panen_tbs"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/greenDefault">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="16dp">
m
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:id="@+id/bg_feature_name"
            android:paddingVertical="2dp"
            android:background="@drawable/background_rounded_dynamic"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feature_name"
                android:text="Panen TBS"
                android:textColor="@android:color/white"
                android:textSize="13dp"
                android:fontFamily="@font/manrope_bold" />
        </FrameLayout>



        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:paddingVertical="10dp"
                android:id="@+id/icon_feature"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:src="@drawable/cbi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/count_feature_data"
                android:textColor="#E0FFFFFF"
                android:textSize="50dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:fontFamily="@font/manrope_semibold" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Lapor Panen"
            android:id="@+id/feature_function_name"
            android:textColor="#E0FFFFFF"
            android:textSize="14dp"
            android:fontFamily="@font/manrope_extrabold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catat &amp; Lapor Hasil\nPanen TPH anda disini!"
            android:textColor="#E0FFFFFF"
            android:id="@+id/feature_function_description"
            android:textSize="11dp"
            android:textStyle="italic"

            android:fontFamily="@font/manrope_bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
