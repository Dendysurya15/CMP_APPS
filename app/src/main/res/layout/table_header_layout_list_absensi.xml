<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/graylight"
        app:cardCornerRadius="5dp"
        app:strokeColor="@color/graylightDarker"
        tools:ignore="MissingConstraints,RedundantNamespace">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TANGGAL"
                android:id="@+id/th1ListAbsensi"
                android:fontFamily="@font/manrope_extrabold"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_radius_background"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="LOKASI"
                android:id="@+id/th2ListAbsensi"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_radius_background"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/th3ListAbsensi"
                android:text="TOTAL KEHADIRAN"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_radius_background"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/th4ListAbsensi"
                android:text="AKSI"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_radius_background"
                android:textStyle="bold"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>