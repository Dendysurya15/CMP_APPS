<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="defaultBoxColor" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/greenDarker</item>
    </style>

    <style name="TextInputLayoutErrorStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">17sp</item> <!-- Change this to your desired size -->
        <item name="android:textColor">@color/colorRedDark</item> <!-- Change the color if needed -->
        <item name="android:textStyle">italic</item> <!-- Change the color if needed -->
    </style>

    <style name="CustomBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:minHeight">70dp</item>
    </style>

    <style name="RoundedFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.FAB.Round</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.FAB.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NoIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- Add these styles to your res/values/styles.xml file -->

    <style name="BottomLeftRoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomRightRoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

</resources>